---
import { getCollection } from 'astro:content'

import {
  SEO_DESCRIPTION_APPLICATION_COMPONENTS,
  SEO_TITLE_APPLICATION_COMPONENTS,
} from '../../../consts'

import BaseLayout from '../../../layouts/BaseLayout.astro'
import ComponentCard from '../../../components/ComponentCard.astro'
import Hero from '../../../components/Hero.astro'
import CollectionStats from '../../../components/CollectionStats.astro'

const components = (await getCollection('application'))
  .map(({ data }) => data)
  .sort((a, b) => a.title.localeCompare(b.title))
---

<BaseLayout
  description={SEO_DESCRIPTION_APPLICATION_COMPONENTS}
  title={SEO_TITLE_APPLICATION_COMPONENTS}
>
  <Hero title="Application" subtitle="Free Tailwind CSS Application Components">
    Build powerful admin dashboards and web applications with production-ready UI components. From
    data tables and forms to navigation menus and modals, each component is designed for
    functionality and accessibility.

    <CollectionStats slot="cta" components={components} />
  </Hero>

  <main id="main-content" class="mx-auto max-w-7xl px-4 pb-8">
    <ul
      aria-label="Application Components"
      class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4"
    >
      {components.map((component) => <ComponentCard component={component} />)}
    </ul>
  </main>
</BaseLayout>
