---
import { getCollection } from 'astro:content'

import {
  SEO_DESCRIPTION_NEO_BRUTALIST_COMPONENTS,
  SEO_TITLE_NEO_BRUTALIST_COMPONENTS,
} from '../../../consts'

import BaseLayout from '../../../layouts/BaseLayout.astro'
import ComponentCard from '../../../components/ComponentCard.astro'
import Hero from '../../../components/Hero.astro'

const components = (await getCollection('collection'))
  .filter(({ data }) => data.category === 'neo-brutalist')
  .map(({ data }) => data)
  .sort((a, b) => a.title.localeCompare(b.title))
---

<BaseLayout
  description={SEO_DESCRIPTION_NEO_BRUTALIST_COMPONENTS}
  title={SEO_TITLE_NEO_BRUTALIST_COMPONENTS}
>
  <Hero title="Neo-Brutalist" subtitle="Free Neo-Brutalist Tailwind CSS Components">
    Big, bold, and unapologetic. High contrast components with thick borders and hard shadows for a
    distinct look.
  </Hero>

  <section class="mx-auto max-w-7xl px-4 pb-8">
    <ul
      aria-label="Neo-Brutalist Components"
      class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4"
    >
      {components.map((component) => <ComponentCard component={component} />)}
    </ul>
  </section>
</BaseLayout>
