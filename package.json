{
  "name": "hyperui",
  "private": true,
  "scripts": {
    "build": "next build",
    "css": "npx tailwindcss -i src/styles/tailwind.css -o public/tailwind.css -m",
    "dev": "next dev",
    "lint": "next lint",
    "postbuild": "yarn css && yarn rss && next-sitemap --config sitemap.config.js",
    "rss": "node ./scripts/generateRssFeed.js",
    "watch": "yarn css -w"
  },
  "dependencies": {
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "17.0.21",
    "@types/prismjs": "^1.26.0",
    "@types/react": "17.0.40",
    "autoprefixer": "^10.4.12",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "fast-glob": "^3.2.12",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "next-mdx-remote": "^4.0.0",
    "next-sitemap": "^3.1.20",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prismjs": "^1.27.0",
    "react-intersection-observer": "^8.33.1",
    "remark": "^14.0.2",
    "remark-html": "^15.0.1",
    "tailwindcss": "^3.1.8",
    "typescript": "4.6.2"
  }
