{
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@component/*": ["src/components/*"],
      "@style/*": ["src/styles/*"],
      "@service/*": ["src/service/*"],
      "@hook/*": ["src/hooks/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", ".next", "out", ".vercel"]
}
